# Disable Guile auto-compilation for better debugging and educational experience
export GUILE_AUTO_COMPILE=0

# Specify the path to guile3 executable
export GUILE=guile3

# Add project bin directory to PATH
PATH_add bin

# Force debug mode for better debugging experience
export GUILE_WARN_DEPRECATED=detailed
export GUILE_LOAD_COMPILED_PATH=""
export GUILE_LOAD_PATH="."

# Set terminal colors for better visual experience
export COLORTERM=truecolor

# Optimize for development rather than performance
export GUILE_JIT_THRESHOLD=100000  # Higher threshold means less JIT compilation